<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.GridPane?>
<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yarcrasy.gamex.MainView"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0">

    <MenuBar>
        <Menu mnemonicParsing="false" text="Juegos">
            <MenuItem mnemonicParsing="false" text="Nuevo" />
         <MenuItem mnemonicParsing="false" text="Listar" />
        </Menu>
        <Menu mnemonicParsing="false" text="Clientes">
            <MenuItem mnemonicParsing="false" text="Nuevo" />
         <MenuItem mnemonicParsing="false" text="Listar" />
        </Menu>
        <Menu mnemonicParsing="false" text="Alquileres">
            <MenuItem mnemonicParsing="false" text="Historial" />
        </Menu>
    </MenuBar>
    <SplitPane dividerPositions="0.1" maxHeight="Infinity" maxWidth="Infinity" prefHeight="1920" prefWidth="Infinity">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" spacing="1.0">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <Label text="Juego">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <HBox prefHeight="25.0" prefWidth="588.0">
                <TextField promptText="Buscar juego" HBox.hgrow="ALWAYS" fx:id="titleField"/>
                <Button mnemonicParsing="false" text="Buscar" onAction="#onGameSearchBtnClick" />
            </HBox>
            <ScrollPane VBox.vgrow="ALWAYS" fx:id="gameList" fitToWidth="true" hbarPolicy="NEVER"/>
        </VBox>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0" spacing="1.0">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <Label text="POS">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <ScrollPane VBox.vgrow="ALWAYS" fx:id="addedGameList" fitToWidth="true" hbarPolicy="NEVER">
                <VBox/>
            </ScrollPane>
            <GridPane>
                <padding>
                    <Insets bottom="5.0" left="0.0" right="0.0" top="5.0" />
                </padding>
                <Button mnemonicParsing="false" text="Procesar Alquiler" GridPane.columnIndex="0" GridPane.rowIndex="1"
                         HBox.hgrow="ALWAYS"/>
            </GridPane>
        </VBox>
    </SplitPane>
</VBox>
